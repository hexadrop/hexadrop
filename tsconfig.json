{
	"extends": "@hexatool/tsconfig",
	"compilerOptions": {
		// Add Bun type definitions
		"types": ["bun-types"],

		// Enable latest features
		"lib": ["ESNext"],
		"module": "esnext",
		"target": "esnext",

		// If TS 5.x+
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"moduleDetection": "force",


		"baseUrl": ".",
		"paths": {
			"@hexadrop/*/test": [
				"packages/*/src/test"
			],
			"@hexadrop/*/memory": [
				"packages/*/src/memory"
			],
			"@hexadrop/*/react": [
				"packages/*/src/react"
			],
			"@hexadrop/*": [
				"packages/*/src"
			]
		}
	},
	"exclude": ["dist", "node_modules"]
}
