{
	"extends": [
		"@hexatool/eslint-config-typescript"
	],
	"overrides": [
		{
			"files": [
				"**/spec/**/*.ts",
				"**/spec/**/*.tsx"
			],
			"parserOptions": {
				"project": [
					"./tsconfig.json"
				]
			},
			"rules": {
				"@typescript-eslint/ban-ts-comment": "warn",
				"@typescript-eslint/no-useless-constructor": "warn",
				"import/no-unresolved": "off"
			}
		},
		{
			"files": [
				"*.ts",
				"*.tsx"
			],
			"parserOptions": {
				"project": [
					"./tsconfig.json"
				]
			},
			"rules": {
				"import/no-unresolved": "off",
				"no-use-before-define": "warn"
			}
		}
	]
}
