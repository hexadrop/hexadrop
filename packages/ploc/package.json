{
	"name": "@hexadrop/ploc",
	"version": "0.0.2",
	"description": "Hexagonal architecture utils library",
	"keywords": [
		"hexadrop",
		"DDD",
		"Hexagonal",
		"Architecture"
	],
	"homepage": "https://github.com/hexatool/hexadrop",
	"bugs": {
		"url": "https://github.com/hexatool/hexadrop/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/hexadrop"
	},
	"license": "MIT",
	"files": [
		"dist"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/hexadrop-ploc.mjs"
		},
		"./memory": {
			"types": "./dist/memory.d.ts",
			"default": "./dist/hexadrop-ploc-memory.mjs"
		},
		"./react": {
			"types": "./dist/react.d.ts",
			"default": "./dist/hexadrop-ploc-react.mjs"
		}
	},
	"scripts": {
		"build": "vite build && vite build --config vite.config.umd.ts && vite build --config vite.config.umd.memory.ts && vite build --config vite.config.umd.react.ts",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"react": ">= 16"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/react": "18.2.6",
		"react": "18.2.0"
	}
}
