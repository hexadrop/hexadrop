{
	"name": "@hexadrop/ploc",
	"version": "1.0.1",
	"description": "Hexagonal architecture utils library",
	"keywords": [
		"hexadrop",
		"DDD",
		"Hexagonal",
		"Architecture"
	],
	"homepage": "https://github.com/hexatool/hexadrop",
	"bugs": {
		"url": "https://github.com/hexatool/hexadrop/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/hexadrop"
	},
	"license": "MIT",
	"files": [
		"dist"
	],
	"type": "module",
	"module": "./dist/hexadrop-ploc.mjs",
	"umd:main": "./dist/hexadrop-ploc.umd.min.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"browser": "./dist/hexadrop-ploc.umd.min.js",
			"default": "./dist/hexadrop-ploc.mjs"
		},
		"./memory": {
			"types": "./dist/memory.d.ts",
			"browser": "./dist/hexadrop-ploc-memory.umd.min.js",
			"default": "./dist/hexadrop-ploc-memory.mjs"
		},
		"./react": {
			"types": "./dist/react.d.ts",
			"browser": "./dist/hexadrop-ploc-react.umd.min.js",
			"default": "./dist/hexadrop-ploc-react.mjs"
		}
	},
	"typesVersions": {
		"*": {
			".": [
				"./dist/index.d.ts"
			],
			"memory": [
				"./dist/memory.d.ts"
			],
			"react": [
				"./dist/react.d.ts"
			]
		}
	},
	"scripts": {
		"build": "yarn build:esm && yarn build:umd && yarn build:umd:memory && yarn build:umd:react",
		"build:esm": "vite build",
		"build:umd": "vite build --config vite.config.umd.ts",
		"build:umd:memory": "vite build --config vite.config.umd.memory.ts",
		"build:umd:react": "vite build --config vite.config.umd.react.ts",
		"prepare": "yarn build",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"react": ">= 16"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/react": "18.2.43",
		"react": "18.2.0"
	}
}
