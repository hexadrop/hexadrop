{
	"name": "@hexadrop/bus",
	"version": "1.0.0-beta.1",
	"description": "Hexagonal architecture utils library",
	"keywords": [
		"hexadrop",
		"DDD",
		"Hexagonal",
		"Architecture"
	],
	"homepage": "https://github.com/hexatool/hexadrop",
	"bugs": {
		"url": "https://github.com/hexatool/hexadrop/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/hexadrop"
	},
	"license": "MIT",
	"files": [
		"dist"
	],
	"type": "module",
	"module": "./dist/hexadrop-bus.mjs",
	"umd:main": "./dist/hexadrop-bus.umd.min.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"browser": "./dist/hexadrop-bus.umd.min.js",
			"default": "./dist/hexadrop-bus.mjs"
		},
		"./memory": {
			"types": "./dist/memory.d.ts",
			"browser": "./dist/hexadrop-bus-memory.umd.min.js",
			"default": "./dist/hexadrop-bus-memory.mjs"
		}
	},
	"typesVersions": {
		"*": {
			"memory": [
				"./dist/memory.d.ts"
			]
		}
	},
	"scripts": {
		"build": "yarn build:esm && yarn build:umd && yarn build:umd:memory",
		"build:esm": "vite build",
		"build:umd": "vite build --config vite.config.umd.ts",
		"build:umd:memory": "vite build --config vite.config.umd.memory.ts",
		"prepare": "yarn build",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"@hexadrop/either": "^1.0.0-beta.1",
		"@hexadrop/error": "^1.0.0-beta.1",
		"@hexadrop/types": "^1.0.0-beta.1"
	},
	"devDependencies": {
		"@hexadrop/either": "1.0.0-beta.1",
		"@hexadrop/error": "1.0.0-beta.1",
		"@hexadrop/types": "1.0.0-beta.1"
	}
}
