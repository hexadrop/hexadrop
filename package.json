{
	"name": "hexadrop",
	"version": "0.0.0",
	"description": "Hexagonal architecture utils library",
	"keywords": [
		"hexadrop",
		"DDD",
		"Hexagonal",
		"Architecture"
	],
	"homepage": "https://github.com/hexatool/hexadrop",
	"bugs": {
		"url": "https://github.com/hexatool/hexadrop/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/hexadrop"
	},
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "yarn workspaces foreach -pv run build",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"publish": "changeset publish",
		"test": "vitest run --no-isolate",
		"test:coverage": "vitest run --no-isolate --coverage",
		"typecheck": "yarn workspaces foreach -pv run typecheck",
		"version": "changeset version && $npm_execpath install"
	},
	"devDependencies": {
		"@changesets/cli": "2.26.1",
		"@hexatool/eslint-config-typescript": "1.0.9",
		"@hexatool/tsconfig": "20.0.0",
		"@types/node": "20.1.2",
		"eslint": "8.40.0",
		"typescript": "5.0.4",
		"vite": "4.3.5",
		"vite-plugin-dts": "2.3.0",
		"vite-plugin-externalize-deps": "0.6.0",
		"vite-tsconfig-paths": "4.2.0",
		"vitest": "0.31.0"
	},
	"volta": {
		"node": "18.14.2",
		"yarn": "3.4.1"
	},
	"packageManager": "yarn@3.4.1"
}
