{
	"name": "hexadrop",
	"version": "0.0.0",
	"description": "Hexagonal architecture utils library",
	"keywords": [
		"hexadrop",
		"DDD",
		"Hexagonal",
		"Architecture"
	],
	"homepage": "https://github.com/hexatool/hexadrop",
	"bugs": {
		"url": "https://github.com/hexatool/hexadrop/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/hexadrop"
	},
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "yarn workspaces foreach -pv run build",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"publish": "changeset publish",
		"test": "vitest run --no-isolate",
		"test:coverage": "vitest run --no-isolate --coverage",
		"typecheck": "yarn workspaces foreach -pv run typecheck",
		"version": "changeset version && $npm_execpath install"
	},
	"dependencies": {
		"@changesets/cli": "2.26.0",
		"@hexatool/eslint-config-typescript": "1.0.4",
		"@hexatool/tsconfig": "18.0.0",
		"@types/node": "18.11.18",
		"eslint": "8.33.0",
		"typescript": "4.9.5",
		"vite": "4.0.4",
		"vite-plugin-dts": "1.7.2",
		"vite-plugin-externalize-deps": "0.5.0",
		"vite-tsconfig-paths": "4.0.5",
		"vitest": "0.28.3"
	},
	"volta": {
		"node": "18.13.0",
		"yarn": "3.4.1"
	},
	"packageManager": "yarn@3.4.1"
}
