{
	"name": "hexadrop",
	"version": "0.0.0",
	"description": "Hexagonal architecture utils library",
	"keywords": [
		"hexadrop",
		"DDD",
		"Hexagonal",
		"Architecture"
	],
	"homepage": "https://github.com/MarioMH8/hexadrop",
	"bugs": {
		"url": "https://github.com/MarioMH8/hexadrop/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/MarioMH8/hexadrop"
	},
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "yarn typecheck && preconstruct build",
		"build:watch": "preconstruct watch",
		"dev": "preconstruct dev",
		"lint": "eslint --ext .ts,.tsx --ignore-path .gitignore .",
		"lint:fix": "eslint --ext .ts,.tsx --ignore-path .gitignore --fix .",
		"postinstall": "preconstruct dev && manypkg check",
		"prepare": "husky install",
		"publish": "yarn build && yarn changeset publish",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"typecheck": "yarn workspaces foreach -piv run typecheck",
		"version": "yarn changeset version && yarn install --mode update-lockfile",
		"webstorm-integration": "vitest --watch --reporter=dot --reporter=json --outputFile=.vitest-result.json"
	},
	"dependencies": {
		"@babel/core": "7.19.0",
		"@babel/plugin-transform-modules-commonjs": "7.18.6",
		"@babel/preset-typescript": "7.18.6",
		"@changesets/cli": "2.24.4",
		"@commitlint/cli": "17.1.2",
		"@commitlint/config-conventional": "17.1.0",
		"@manypkg/cli": "0.19.1",
		"@preconstruct/cli": "2.2.1",
		"@tsconfig/node16-strictest-esm": "^1.0.3",
		"@types/node": "18.7.15",
		"@typescript-eslint/eslint-plugin": "5.36.2",
		"@typescript-eslint/parser": "5.48.1",
		"@vitest/coverage-istanbul": "0.23.1",
		"eslint": "8.23.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.2.1",
		"husky": "8.0.1",
		"lint-staged": "13.0.3",
		"pirates": "4.0.5",
		"prettier": "2.7.1",
		"source-map-support": "0.5.21",
		"typescript": "4.8.2",
		"vite": "3.1.0",
		"vitest": "0.23.1"
	},
	"resolutions": {
		"glob-parent": "^6.0.0",
		"got": "^11.8.5",
		"terser": "^5.14.2"
	},
	"engines": {
		"node": ">=16"
	},
	"volta": {
		"node": "16.17.0",
		"yarn": "1.22.19"
	},
	"packageManager": "yarn@3.2.3",
	"lint-staged": {
		"*.{ts,tsx,json,.md}": "yarn lint:fix"
	},
	"preconstruct": {
		"globals": {
			"@faker-js/faker": "Faker",
			"@hexadrop/core": "hexadrop",
			"sinon": "sinon",
			"vitest": "vitest"
		},
		"packages": [
			"packages/*"
		]
	},
	"dependenciesMeta": {
		"@tsconfig/node16-strictest-esm@1.0.3": {
			"unplugged": true
		}
	}
}
