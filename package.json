{
	"name": "hexadrop",
	"version": "0.0.0",
	"description": "Hexagonal architecture utils library",
	"keywords": [
		"hexadrop",
		"DDD",
		"Hexagonal",
		"Architecture"
	],
	"homepage": "https://github.com/hexatool/hexadrop",
	"bugs": {
		"url": "https://github.com/hexatool/hexadrop/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hexatool/hexadrop"
	},
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "yarn workspaces foreach -pv run build",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"publish": "changeset publish",
		"test": "vitest run --no-isolate",
		"test:coverage": "vitest run --no-isolate --coverage",
		"typecheck": "yarn workspaces foreach -pv run typecheck",
		"version": "changeset version && $npm_execpath install"
	},
	"devDependencies": {
		"@changesets/cli": "2.26.2",
		"@hexatool/eslint-config-typescript": "1.0.11",
		"@hexatool/tsconfig": "20.0.1",
		"@types/node": "20.6.4",
		"@vitest/coverage-c8": "0.33.0",
		"eslint": "8.50.0",
		"typescript": "5.2.2",
		"vite": "4.4.9",
		"vite-plugin-dts": "3.5.4",
		"vite-plugin-externalize-deps": "0.7.0",
		"vite-tsconfig-paths": "4.2.1",
		"vitest": "0.34.5"
	},
	"volta": {
		"node": "20.7.0",
		"yarn": "3.6.3"
	},
	"packageManager": "yarn@3.6.3"
}
